{
  "compilerOptionss": {
    "target": "ESNEXT",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"],
}
